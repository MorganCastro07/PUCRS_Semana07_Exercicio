import java.util.Scanner;

public class Converter temperatura em Fahrenheit {

public static void main(String[]args){

Scanner dados = new Scanner(System.in);

double Temperatura, Soma;

do {
    System.out.println("DIGITE A TEMPERATURA Celsius");
    Temperatura = dados.nextDouble();
    Soma  = (Temperatura*1.8)+32;
    }while (Temperatura == 0);
    System.out.println("TEMPERATURA EM FAHRENHEIT: " + Soma);
 }
}

